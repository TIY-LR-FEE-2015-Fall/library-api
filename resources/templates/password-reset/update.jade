extends /layouts/base
include /mixins/form-helpers
block body
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Set New Password
                    .panel-body
                        include /partials/alerts
                        form(role="form" action="/reset/#{token}" method="POST")
                            input(type="hidden" name="token" value=token)
                            fieldset
                                .form-group
                                    +inputField('email', null)(placeholder="E-mail" type="email" autofocus)
                                .form-group
                                    input#password.form-control(type="password", name="password" placeholder="Password")
                                .form-group
                                    input#password.form-control(type="password", name="passwordConfirmation" placeholder="Password Confirmation")
                                    .help-block.text-right
                                        a(href="/login") Login
                                button.btn.btn-lg.btn-success.btn-block Send Reset
