extends /layouts/base
include /mixins/form-helpers
block body
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Request Email Reset
                    .panel-body
                        include /partials/alerts
                        form(role="form" action="/reset" method="POST")
                            fieldset
                                .form-group
                                    +inputField('email', null)(placeholder="E-mail" type="email" autofocus)
                                    .help-block.text-right
                                        a(href="/login") Login
                                button.btn.btn-lg.btn-success.btn-block Send Reset
